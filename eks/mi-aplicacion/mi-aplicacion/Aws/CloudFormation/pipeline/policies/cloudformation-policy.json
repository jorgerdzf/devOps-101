{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "iam:PassRole"
      ],
      "Resource": "*",
      "Effect": "Allow"
    },
    {
      "Action": [
        "logs:*",
        "s3:*",
        "cloudformation:*",
        "cloudwatch:*",
        "kms:*",
        "ecr:*",
        "ec2:*",
        "eks:*",
        "codebuild:*",
        "codepipeline:*",
        "codedeploy:*",
        "codestar-connections:PassConnection",
        "sts:*",
        "iam:*",
        "ssm:*",
        "xray:*"
      ],
      "Resource": "*",
      "Effect": "Allow"
    }
  ]
}