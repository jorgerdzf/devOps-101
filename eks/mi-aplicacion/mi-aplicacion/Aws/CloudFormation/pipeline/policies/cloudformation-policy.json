{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "lambda:InvokeFunction",
        "lambda:ListFunctions"
      ],
      "Resource": "*",
      "Effect": "Allow"
    },
    {
      "Action": [
        "iam:PassRole"
      ],
      "Resource": "*",
      "Effect": "Allow"
    },
    {
      "Action": [
        "logs:*",
        "s3:*",
        "cloudformation:*",
        "cloudwatch:*",
        "dynamodb:*",
        "lambda:*",
        "kms:*",
        "ecr:*",
        "ec2:*",
        "eks:*",
        "codebuild:*",
        "codepipeline:*",
        "codedeploy:*",
        "codestar-connections:*",
        "sts:*",
        "iam:*",
        "ssm:*",
        "sns:*",
        "xray:*"
      ],
      "Resource": "*",
      "Effect": "Allow"
    }
  ]
}